{
  "name": "@truststack/sdk",
  "version": "0.0.2",
  "description": "Unified Trust Stack SDK.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "devDependencies": {
    "@hey-api/openapi-ts": "^0.61.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5"
  },
  "dependencies": {
    "@hey-api/client-fetch": "^0.6.0",
    "@truststack/admin": "workspace:*",
    "@truststack/canvas": "workspace:*",
    "@truststack/core": "workspace:*",
    "@truststack/did": "workspace:*",
    "@truststack/hermes": "workspace:*"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "reports",
          "outputName": "junit.xml"
        }
      ]
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "@truststack/(.*)$": "<rootDir>/../../packages/$1/src",
      "@truststack/core/(.*)$": "<rootDir>/../../packages/core/src/$1"
    }
  }
}